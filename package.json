{
  "name": "Atomex",
  "version": "1.0.0",
  "description": "Multicurrency HD wallet with built-in hybrid atomic swap exchange",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.ATOMEX.mac",
    "mac": {
      "category": "atomex.category",
      "icon": "images/icon1024.icns"
    },
    "linux": {
      "category": "atomex.category",
      "target": [
        "deb"
      ],
      "icon": "images/icon1024.icns"
    }
  },
  "repository": "https://github.com/atomex-me",
  "keywords": [
    "Atomex",
    "Swap",
    "Exchange",
    "Crypto",
    "Wallet"
  ],
  "author": "Konstantin <johnysalvesen@gmail.com>",
  "homepage": "https://atomex.me",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "electron-packager": "^14.2.1"
  },
  "dependencies": {
    "minimist": "^1.2.5",
    "open": "^7.0.3"
  }
}
